<% if @rfc %>
  <h4>
    <%= @rfc.ciName %> <br/>
    <%= @rfc.ciClassName %> <br/>
    <%= @rfc.nsPath %>
  </h4>
<% end %>
<ol class="log">
  <% @log_data.each do |e| %>
    <% message = e['message'].gsub(/^.*cmd out:/, '')
       if message =~ /ERROR:|FATAL:/
         class_name = 'error'
       elsif message =~ /WARN:/
         class_name = 'warning'
       elsif message =~ /INFO:/
         class_name = 'info'
       else
         class_name = ''
       end %>
    <li> <span class="<%= class_name %>"><%= message %></span></li>
  <% end %>
</ol>
